{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./public",        
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
          "@/*": ["src/*"]
      },
      "typeRoots": ["./node_modules/@types", "src/tests/@types"]
  },
  "include": ["src/**/*.ts", "src/__tests/features/support/world.mjs", "src/__tests/features/step_definitions/PagamentoSteps.mjs"],
  "exclude": ["node_modules"]
}
